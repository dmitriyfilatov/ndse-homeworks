<form method="POST" class="mt-5" enctype="multipart/form-data">
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text" value="<%= book.title %>" name="title" class="form-control" id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDescription">Описание</label>
        <textarea rows="3" name="description" class="form-control"
            id="inputDescription"><%= book.description %></textarea>
    </div>

    <div class="form-group">
        <label for="inputAuthors">Авторы</label>
        <textarea rows="3" name="authors" class="form-control" id="inputAuthors"><%= book.authors %></textarea>
    </div>

    <div class="form-group">
        <label for="inputFileName">Имя Файла</label>
        <input type="text" value="<%= book.fileName %>" name="fileName" class="form-control" id="inputFileName">
    </div>

    <div class="form-group">
        <label for="inputAuthors"><%= book.fileName ? book.fileName : 'Загрузка книги' %></label>
        <p><input type="file" name="fileBook" multiple accept="text/plain"></p>
    </div>

    
    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>


</form>